@model IAproject.Models.Menu

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Menu details including review*@
<h2>Details</h2>

<div>
    <h4>Menu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MenuPhoto)
        </dt>

        <dd>
            <img class="img-thumbnail" src='@Url.Content("~/Uploads/" + Model.MenuPhoto)' />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Carlorie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carlorie)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("EditMenu", "EditMenu", new { id = Model.MenuID })|
    @Html.ActionLink("Back to List", "ManageMenus")
</p>

<h2>Here is the review of this Menu</h2>
<table class="table">
    <tr>
        <th>
            <h4>Reviews</h4>
        </th>

        <th></th>
    </tr>


    @foreach (var item in Model.Reviews)
    {
        <tr>

            @if (item.Username == null)
            {
                <td>
                    Someone says: @Html.Raw(item.ReviewText)
                </td>
            }
            else
            {
                <td>
                    @item.Username says: @Html.Raw(item.ReviewText)
                </td>
            }

            <td>

                @Html.ActionLink("Delete Review", "DeleteReview", new { id = item.ReviewNum })
            </td>

        </tr>


    }



</table>

