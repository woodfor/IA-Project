@model IEnumerable<IAproject.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>Menu name</th>
            <th>Menu Photo</th>
            <th>Calorie</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Mach Any Document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td> <img class="img-thumbnail" src='@Url.Content("~/Uploads/" + item.MenuPhoto)' /> </td>
                    <td>@item.Carlorie</td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.MenuID }) |
                        @Html.ActionLink("Comments", "Comments", new { id = item.MenuID })

                    </td>
                </tr>
            }
        }

    </tbody>
</table>

@using (Html.BeginForm("Create", "SeeMenu", FormMethod.Post))
{

    <div class="col-md-10">
        <h2>
            Not satisfield? upload your menu!
        </h2>
        <br />
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Find Menu" class="btn btn-default" />
        </div>
    </div>

}

